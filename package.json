{
  "name": "penguin-bank-mcp",
  "version": "1.0.0",
  "type": "module",
  "description": "Banking demo using Model Context Protocol (MCP) with Supabase and Netlify Edge Functions",
  "scripts": {
    "dev": "netlify dev",
    "mcp-proxy": "node mcp-proxy.js",
    "db:migrate": "supabase db push",
    "db:reset": "supabase db reset --debug",
    "db:link": "supabase link --project-ref $SUPABASE_PROJECT_ID"
  },
  "devDependencies": {
    "netlify-cli": "^17.0.0",
    "supabase": "^1.150.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.13.0"
  }
}
